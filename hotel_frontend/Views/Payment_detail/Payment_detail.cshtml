<script>
    // Get all input fields
    const inputFields = document.querySelectorAll('input[type="text"], input[type="email"]');
    // Get the checkbox
    const checkbox = document.querySelector('input[type="checkbox"]');
    // Get the continue button
    const continueButton = document.querySelector('.continue_button');

    // Add event listener to all input fields and the checkbox
    inputFields.forEach(input => {
        input.addEventListener('input', checkForm);
    });
    checkbox.addEventListener('change', checkForm);

    function checkForm() {
        // Check if all input fields are filled and the checkbox is checked
        const allFilled = Array.from(inputFields).every(input => input.value !== '');
        const checkboxChecked = checkbox.checked;

        if (allFilled && checkboxChecked) {
            // If all conditions are met, enable the continue button
            continueButton.disabled = false;
        } else {
            // Otherwise, disable the continue button
            continueButton.disabled = true;
        }
    }

    // Call checkForm at the start to set the initial state of the continue button
    checkForm();

    // Handle form submission
    document.getElementById('personal-details-form').addEventListener('submit', function (event) {
        event.preventDefault();
        document.getElementById('thank-you-overlay').style.display = 'flex';
    });

    function bookMoreRooms() {
        window.location.href = '/booking-page-url'; // Replace with actual booking page URL
    }

    function viewBookingDetails() {
        window.location.href = '/booking-details-url'; // Replace with actual booking details URL
    }
</script>